<UserControl x:Class="ModuleA.Views.ModuleAView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModuleA.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Background="BlanchedAlmond">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock FontSize="16" Text="Name" HorizontalAlignment="Center"/>
            <TextBox Width="200" Height="30" FontSize="18" Text="{Binding Avengers.MemberRealName}" Margin="0, 10, 0, 0"/>

            <TextBlock FontSize="18" HorizontalAlignment="Center" Text="{Binding Avengers.MemberRealName}" Margin="0, 50, 0, 0"/>
            <TextBlock FontSize="18" HorizontalAlignment="Center" Text="{Binding Avengers.MemberCodeName}" Margin="0, 10, 0, 0"/>
            <TextBlock FontSize="18" HorizontalAlignment="Center" Text="{Binding Avengers.MemberUniverse}" Margin="0, 10, 0, 0"/>
        </StackPanel>        
    </Grid>
</UserControl>
