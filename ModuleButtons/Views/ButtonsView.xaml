<UserControl x:Class="ModuleButtons.Views.ButtonsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModuleButtons.Views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="900"
             Background="IndianRed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Width="100" Height="30" FontSize="18" Content="Load Data" Margin="5" Command="{Binding LoadDataCmd}"/>
        <Button Grid.Column="1" Width="100" Height="30" FontSize="18" Content="Save Data" Margin="5" Command="{Binding SaveDataCmd}"/>
    </Grid>
</UserControl>
